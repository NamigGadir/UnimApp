<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Unim_Main_Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/unim_main_button_background</item>
    </style>

    <style name="Unim_Round_Button" parent="Unim_Main_Button">
        <item name="android:background">@drawable/roundy_button_background</item>
    </style>

    <style name="Unim_Round_Button_Small" parent="Unim_Round_Button">
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">4dp</item>
    </style>

    <style name="Unim_Text_Button">
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/stroke_color</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Unim_Selector_Dropdown" parent="Unim_Text_18sp">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:drawableEnd">@drawable/ic_chevron</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/roundy_sign_button_border_background</item>
    </style>

    <style name="Unim_Selector_RadioButton" parent="Unim_Text_18sp">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Unim_Text_H1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_32sp</item>
        <item name="android:textColor">@color/unim_secondary_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Unim_Text_H4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/unim_secondary_color</item>
    </style>

    <style name="Unim_Text_H6">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Unim_Text_H6_Gray" parent="Unim_Text_H6">
        <item name="android:textColor">@color/stroke_color_alpha65</item>
    </style>

    <style name="Unim_Text_32sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_32sp</item>
        <item name="android:textColor">@color/unim_secondary_color</item>
    </style>

    <style name="Unim_Text_16sp_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/stroke_color</item>
    </style>

    <style name="Unim_Text_18sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/stroke_color</item>
    </style>

    <style name="Unim_Text_24sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:textColor">@color/stroke_color</item>
    </style>

    <style name="Unim_Text_24sp_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:textColor">@color/stroke_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Unim_Text_24sp_Blue" parent="Unim_Text_24sp">
        <item name="android:textColor">@color/unim_main_color</item>
    </style>

    <style name="Unim_Text_14sp">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/unim_secondary_color</item>
    </style>

    <style name="Unim_Text_14sp_Bold" parent="Unim_Text_14sp">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Unim_Text_10sp">
        <item name="android:textSize">@dimen/text_size_10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Unim_Text_12sp">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Unim_Profile_Skill_Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/unim_main_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@drawable/roundy_rectangle_profile</item>
    </style>

    <!--EditText -->
    <style name="Unim_Main_TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/unim_main_color</item>
    </style>
</resources>