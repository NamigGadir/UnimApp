<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TagView">
        <attr name="lineMargin" format="dimension" />
        <attr name="tagMargin" format="dimension" />
        <attr name="textPaddingLeft" format="dimension" />
        <attr name="textPaddingRight" format="dimension" />
        <attr name="textPaddingTop" format="dimension" />
        <attr name="textPaddingBottom" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ImageResourceView">
        <attr name="image" format="reference" />
    </declare-styleable>

    <declare-styleable name="FileResourceView">
        <attr name="document_name" format="string" />
        <attr name="document_size" format="string" />
        <attr name="document_logo" format="reference" />
    </declare-styleable>

    <declare-styleable name="LinkResourceView">
        <attr name="link_title" format="string" />
        <attr name="link" format="string" />
        <attr name="link_image" format="reference" />
    </declare-styleable>
</resources>